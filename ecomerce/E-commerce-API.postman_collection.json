        {
          "name": "üîç Debug Token Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "verify"]
            },
            "description": "üîß Debug helper: Check if your access token is valid and not expired"
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const accessToken = pm.environment.get('accessToken');",
                  "const refreshToken = pm.environment.get('refreshToken');",
                  "",
                  "console.log('=== TOKEN DEBUG INFO ===');",
                  "console.log('Access Token:', accessToken ? '‚úÖ Present' : '‚ùå Missing');",
                  "console.log('Refresh Token:', refreshToken ? '‚úÖ Present' : '‚ùå Missing');",
                  "",
                  "if (accessToken) {",
                  "    console.log('Token Preview:', accessToken.substring(0, 30) + '...');",
                  "    try {",
                  "        const payload = JSON.parse(atob(accessToken.split('.')[1]));",
                  "        const now = Math.floor(Date.now() / 1000);",
                  "        const expiresAt = new Date(payload.exp * 1000);",
                  "        console.log('Token expires at:', expiresAt);",
                  "        console.log('Token valid for:', Math.max(0, payload.exp - now), 'more seconds');",
                  "        console.log('Token expired:', payload.exp < now ? '‚ùå YES' : '‚úÖ NO');",
                  "    } catch (e) {",
                  "        console.log('‚ùå Could not parse token');",
                  "    }",
                  "}",
                  "console.log('========================');"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    console.log('‚úÖ Token is valid and working!');",
                  "} else if (pm.response.code === 401) {",
                  "    console.log('‚ùå Token is invalid or expired. Please login again.');",
                  "} else {",
                  "    console.log('‚ö†Ô∏è  Unexpected response:', pm.response.code);",
                  "}"
                ]
              }
            }
          ]
